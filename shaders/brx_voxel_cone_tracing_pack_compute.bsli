#ifndef _BRX_VOXEL_CONE_TRACING_PACK_COMPUTE_BSLI_
#define _BRX_VOXEL_CONE_TRACING_PACK_COMPUTE_BSLI_ 1

#ifndef BRX_VCT_ENABLE_ILLUMINATION
#error "0 or 1"
#endif

#include "../../Brioche-Shader-Language/shaders/brx_shader_language.bsli"

brx_uint brx_vct_application_bridge_get_clipmap_mask(in brx_int3 in_mask_texture_coordinates);

#if BRX_VCT_ENABLE_ILLUMINATION

brx_uint brx_vct_application_bridge_get_clipmap_illumination_opacity_r16g16(in brx_int3 in_illumination_opacity_texture_coordinates);

#endif

brx_uint brx_vct_application_bridge_get_clipmap_illumination_opacity_b16a16(in brx_int3 in_illumination_opacity_texture_coordinates);

void brx_vct_application_bridge_set_clipmap_illumination_opacity_r16g16b16a16(in brx_int3 in_illumination_opacity_texture_coordinates, in brx_float4 in_illumination_opacity);

#include "../include/brx_voxel_cone_tracing.h"
#include "brx_voxel_cone_tracing_resource.bsli"

#ifndef INTERNAL_BRX_DISABLE_ROOT_SIGNATURE
brx_root_signature(brx_voxel_cone_tracing_pack_root_signature_macro, brx_voxel_cone_tracing_pack_root_signature_name)
#endif
brx_num_threads(BRX_VOXEL_CONE_TRACING_PACK_THREADGROUP_X, BRX_VOXEL_CONE_TRACING_PACK_THREADGROUP_Y, BRX_VOXEL_CONE_TRACING_PACK_THREADGROUP_Z)
brx_compute_shader_parameter_begin(main)
brx_compute_shader_parameter_in_dispatch_thread_id
brx_compute_shader_parameter_end(main)
{
    // pack to reduce the sampling cost in cone tracing

    brx_int3 voxel_coordinates = brx_int3(brx_dispatch_thread_id);

    brx_int3 mask_texture_coordinates = internal_brx_get_clipmap_mask_texture_coordinates_int(voxel_coordinates);

    brx_uint mask = brx_vct_application_bridge_get_clipmap_mask(mask_texture_coordinates);

    brx_branch if (0u != mask)
    {
        brx_unroll for (brx_int clipmap_stack_level_index = 0; clipmap_stack_level_index < brx_int(BRX_VCT_CLIPMAP_STACK_LEVEL_COUNT); ++clipmap_stack_level_index)
        {
            brx_branch if (0u != (mask & internal_brx_get_clipmap_opacity_mask(clipmap_stack_level_index)))
            {
#if BRX_VCT_ENABLE_ILLUMINATION
                brx_float opacity;

                brx_unroll for (brx_int direction_index = 0; direction_index < (brx_int(BRX_VCT_CLIPMAP_ILLUMINATION_TEXTURE_DIRECTION_WIDTH_COUNT) * brx_int(BRX_VCT_CLIPMAP_ILLUMINATION_TEXTURE_DIRECTION_HEIGHT_COUNT)); ++direction_index)
                {
#if 0 == (BRX_VCT_CLIPMAP_ILLUMINATION_TEXTURE_DIRECTION_WIDTH_COUNT & (BRX_VCT_CLIPMAP_ILLUMINATION_TEXTURE_DIRECTION_WIDTH_COUNT - 1))
                    brx_int direction_width_index = brx_int(brx_uint(direction_index) & brx_uint(brx_int(BRX_VCT_CLIPMAP_ILLUMINATION_TEXTURE_DIRECTION_WIDTH_COUNT) - 1));
                    brx_int direction_height_index = brx_int(brx_uint(direction_index) >> brx_uint(brx_firstbithigh(brx_uint(BRX_VCT_CLIPMAP_ILLUMINATION_TEXTURE_DIRECTION_WIDTH_COUNT))));
#else
                    brx_int direction_width_index = brx_int(brx_uint(direction_index) % brx_uint(BRX_VCT_CLIPMAP_ILLUMINATION_TEXTURE_DIRECTION_WIDTH_COUNT));
                    brx_int direction_height_index = brx_int(brx_uint(direction_index) / brx_uint(BRX_VCT_CLIPMAP_ILLUMINATION_TEXTURE_DIRECTION_WIDTH_COUNT));
#endif
                    brx_int3 illumination_opacity_texture_coordinates = internal_brx_get_clipmap_illumination_opacity_texture_coordinates_int(voxel_coordinates, clipmap_stack_level_index, direction_width_index, direction_height_index);

                    brx_branch if (0 == direction_index)
                    {
                        brx_float2 illumination_opacity_red_green;
                        brx_branch if (0u != (mask & internal_brx_get_clipmap_illumination_mask(direction_width_index, direction_height_index)))
                        {
                            illumination_opacity_red_green = brx_unpack_half2(brx_vct_application_bridge_get_clipmap_illumination_opacity_r16g16(illumination_opacity_texture_coordinates));
                        }
                        else
                        {
                            illumination_opacity_red_green = brx_float2(0.0, 0.0);
                        }

                        brx_float2 illumination_opacity_blue_alpha = brx_unpack_half2(brx_vct_application_bridge_get_clipmap_illumination_opacity_b16a16(illumination_opacity_texture_coordinates));

                        opacity = brx_clamp(illumination_opacity_blue_alpha.y, 0.0, 1.0);

                        // https://github.com/AcademySoftwareFoundation/Imath/blob/main/src/Imath/half.h
                        // HALF_MAX 65504.0
                        brx_float3 illumination = brx_clamp(brx_float3(illumination_opacity_red_green.x, illumination_opacity_red_green.y, illumination_opacity_blue_alpha.x), brx_float3(0.0, 0.0, 0.0), brx_float3(65504.0, 65504.0, 65504.0));

                        brx_float4 illumination_opacity = brx_float4(illumination, opacity);
                    
                        brx_vct_application_bridge_set_clipmap_illumination_opacity_r16g16b16a16(illumination_opacity_texture_coordinates, illumination_opacity);
                    }
                    else
                    {
                        brx_float2 illumination_opacity_red_green;
                        brx_float2 illumination_opacity_blue_alpha;
                        brx_branch if (0u != (mask & internal_brx_get_clipmap_illumination_mask(direction_width_index, direction_height_index)))
                        {
                            illumination_opacity_red_green = brx_unpack_half2(brx_vct_application_bridge_get_clipmap_illumination_opacity_r16g16(illumination_opacity_texture_coordinates));
                            illumination_opacity_blue_alpha = brx_unpack_half2(brx_vct_application_bridge_get_clipmap_illumination_opacity_b16a16(illumination_opacity_texture_coordinates));
                        }
                        else
                        {
                            illumination_opacity_red_green = brx_float2(0.0, 0.0);
                            illumination_opacity_blue_alpha = brx_float2(0.0, 0.0);
                        }

                        // https://github.com/AcademySoftwareFoundation/Imath/blob/main/src/Imath/half.h
                        // HALF_MAX 65504.0
                        brx_float3 illumination = brx_clamp(brx_float3(illumination_opacity_red_green.x, illumination_opacity_red_green.y, illumination_opacity_blue_alpha.x), brx_float3(0.0, 0.0, 0.0), brx_float3(65504.0, 65504.0, 65504.0));

                        brx_float4 illumination_opacity = brx_float4(illumination, opacity);

                        brx_vct_application_bridge_set_clipmap_illumination_opacity_r16g16b16a16(illumination_opacity_texture_coordinates, illumination_opacity);
                    }
                }
#else
                brx_int3 illumination_opacity_texture_coordinates = internal_brx_get_clipmap_illumination_opacity_texture_coordinates_int(voxel_coordinates, clipmap_stack_level_index, 0, 0);

                brx_float2 illumination_opacity_blue_alpha = brx_unpack_half2(brx_vct_application_bridge_get_clipmap_illumination_opacity_b16a16(illumination_opacity_texture_coordinates));

                brx_float opacity = brx_clamp(illumination_opacity_blue_alpha.y, 0.0, 1.0);

                brx_vct_application_bridge_set_clipmap_illumination_opacity_r16g16b16a16(illumination_opacity_texture_coordinates, brx_float4(0.0, 0.0, 0.0, opacity));
#endif
            }
        }
    }
}

#endif
