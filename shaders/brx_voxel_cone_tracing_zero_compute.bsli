#ifndef _BRX_VOXEL_CONE_TRACING_ZERO_COMPUTE_BSLI_
#define _BRX_VOXEL_CONE_TRACING_ZERO_COMPUTE_BSLI_ 1

#ifndef BRX_VCT_ENABLE_ILLUMINATION
#error "0 or 1"
#endif

#include "../../Brioche-Shader-Language/shaders/brx_shader_language.bsli"

brx_int3 brx_vct_application_bridge_get_clipmap_mask_dimension();

void brx_vct_application_bridge_set_clipmap_mask(in brx_int3 in_mask_texture_coordinates, in brx_uint in_mask);

#if BRX_VCT_ENABLE_ILLUMINATION

brx_int3 brx_vct_application_bridge_get_clipmap_illumination_opacity_r16g16_dimension();

void brx_vct_application_bridge_set_clipmap_illumination_opacity_r16g16(in brx_int3 in_illumination_opacity_texture_coordinates, in brx_uint in_packed_illumination_opacity_red_green);

#endif

brx_int3 brx_vct_application_bridge_get_clipmap_illumination_opacity_b16a16_dimension();

void brx_vct_application_bridge_set_clipmap_illumination_opacity_b16a16(in brx_int3 in_illumination_opacity_texture_coordinates, in brx_uint in_packed_illumination_opacity_blue_alpha);

brx_int3 brx_vct_application_bridge_get_clipmap_illumination_opacity_r16g16b16a16_dimension();

void brx_vct_application_bridge_set_clipmap_illumination_opacity_r16g16b16a16(in brx_int3 in_illumination_opacity_texture_coordinates, in brx_float4 in_illumination_opacity);

#include "../include/brx_voxel_cone_tracing.h"

#ifndef INTERNAL_BRX_DISABLE_ROOT_SIGNATURE
brx_root_signature(brx_voxel_cone_tracing_zero_root_signature_macro, brx_voxel_cone_tracing_zero_root_signature_name)
#endif
brx_num_threads(BRX_VOXEL_CONE_TRACING_ZERO_THREADGROUP_X, BRX_VOXEL_CONE_TRACING_ZERO_THREADGROUP_Y, BRX_VOXEL_CONE_TRACING_ZERO_THREADGROUP_Z)
brx_compute_shader_parameter_begin(main)
brx_compute_shader_parameter_in_dispatch_thread_id
brx_compute_shader_parameter_end(main)
{
    brx_int3 texture_coordinates = brx_int3(brx_dispatch_thread_id);

    brx_int3 clipmap_texture_mask_dimension = brx_vct_application_bridge_get_clipmap_mask_dimension();

    brx_branch if (brx_all(brx_less_than(texture_coordinates, clipmap_texture_mask_dimension)))
    {
        brx_vct_application_bridge_set_clipmap_mask(texture_coordinates, 0u);
    }

#if BRX_VCT_ENABLE_ILLUMINATION

    brx_int3 clipmap_texture_illumination_opacity_r16g16_dimension = brx_vct_application_bridge_get_clipmap_illumination_opacity_r16g16_dimension();

    brx_branch if (brx_all(brx_less_than(texture_coordinates, clipmap_texture_illumination_opacity_r16g16_dimension)))
    {
        brx_vct_application_bridge_set_clipmap_illumination_opacity_r16g16(texture_coordinates, brx_pack_half2(brx_float2(0.0, 0.0)));
    }

#endif

    brx_int3 clipmap_texture_illumination_opacity_b16a16_dimension = brx_vct_application_bridge_get_clipmap_illumination_opacity_b16a16_dimension();

    brx_branch if (brx_all(brx_less_than(texture_coordinates, clipmap_texture_illumination_opacity_b16a16_dimension)))
    {
        brx_vct_application_bridge_set_clipmap_illumination_opacity_b16a16(texture_coordinates, brx_pack_half2(brx_float2(0.0, 0.0)));
    }

    brx_int3 clipmap_texture_illumination_opacity_r16g16b16a16_dimension = brx_vct_application_bridge_get_clipmap_illumination_opacity_r16g16b16a16_dimension();

    brx_branch if (brx_all(brx_less_than(texture_coordinates, clipmap_texture_illumination_opacity_r16g16b16a16_dimension)))
    {
        brx_vct_application_bridge_set_clipmap_illumination_opacity_r16g16b16a16(texture_coordinates, brx_float4(0.0, 0.0, 0.0, 0.0));
    }
}

#endif
